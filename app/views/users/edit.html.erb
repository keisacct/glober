<header class='top-page-header'>
    <div class="header-container">
        <%= link_to image_tag('horizontal_on_white_by_logaster.png', class: 'glober-icon'), "/" %>
    </div>
</header>

<section class="vh-100 " style="background-color: #eee;">
  <div class="container h-100">
    <%= form_with model: @user, local: true do |f| %>
      <%# <%= render "devise/shared/error_messages", resource: resource %> 
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">プロフィール編集</p>

                <form class="mx-1 mx-md-4">
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa fa-file fa-lg me-3 fa-fw" aria-hidden="true"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.file_field :user_icon, id:"form3Example1c", class:"form-control" %>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :username, id:"form3Example1c", placeholder: "ユーザー名", class:"form-control" %>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa fa-pencil fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_area :introduction, id:"form3Example1c", class:"form-control", placeholder: "紹介文", rows: "15" %>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa-brands fa-twitter fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :twitter_url, id:"form3Example1c", class:"form-control", placeholder: "Twitter URL" %>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa-brands fa-linkedin fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :linkedin_url, id:"form3Example1c", class:"form-control", placeholder: "LinkedIn URL" %>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa-brands fa-facebook fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :facebook_url, id:"form3Example1c", class:"form-control", placeholder: "Facebook URL" %>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa-solid fa-link fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.text_field :blog_url, id:"form3Example1c", class:"form-control", placeholder: "Blog URL" %>
                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <ul class="mypage-form-btns">
                        <li class="mypage-form-btn"><%= f.submit "更新", class:"btn btn-secondary btn-sl" %></li>
                        <li class="mypage-form-btn"><%= link_to '戻る', @user, class:"btn btn-secondary btn-sl", style:"color: white;" %></li>
                    </ul>
                  </div>

                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</section>