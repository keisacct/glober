<%= render "shared/devise_header" %>
    <ul class="nav nav-tabs nav-pills">
        <li class="nav-item"><%= link_to '新規登録', new_user_registration_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to 'ログイン', user_session_path, class: "nav-link" %></li>
    </ul>
<section class="vh-100 " style="background-color: #eee; padding-top: 10vh;">
  <div class="container h-100">
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <div class="row d-flex justify-content-center align-items-center h-100">
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign In</p>

                <form class="mx-1 mx-md-4">
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.email_field :email, placeholder: "メールアドレス", id:"form3Example3c", class:"form-control", required:"required" %>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", id:"form3Example4c", class:"form-control", required:"required" %>
                    </div>
                  </div>

                  <%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post %>

                  <div class="form-check d-flex justify-content-center mb-5">
                     <% if devise_mapping.rememberable? %>
                      <%= f.check_box :remember_me, class:"form-check-input me-2",id:"form2Example3c" %>
                      <label class="form-check-label" for="form2Example3">
                        Remeber me
                      </label>
                     <% end %>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= f.submit "ログイン", class:"btn btn-primary btn-lg" %>
                  </div>

                </form>
              </div>
              <div class="col-4 d-flex align-items-center order-1 order-lg-2">
                <%= image_tag 'my_logo.jpeg', class:"img-fluid", size: "300x300", style:"margin-left: 5vh;" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</section>