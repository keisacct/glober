<div class="col-sm-8">
<%= form_with model: [@user, @profile], local: true do |f| %>
<table class="table">
    <tbody>
    <tr>
        <td>ユーザー名</td>
        <td><%= f.text_area :username, placeholder: "username" %></td>
    </tr>
    <tr>
        <td>紹介文:</td>
        <td><%= f.text_area :introduction, placeholder: "紹介文" %></td>
    </tr>
    </tbody>
</table>
<% end %>
</div>