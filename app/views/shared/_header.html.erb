<header class='top-page-header'>
    <div class="header-container">
        <div class='search-bar-contents'>
            <div class="glober-icon">
                <h1 class="glober-text"><%= link_to "GLOBER", "/", style: "color: black; text-decoration: none;" %></h1>
            </div>
            <form class="search-form" action="#">
                <input class='input-box'>
                    <button class='search-button'>
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </button>
            </form>
        </div>
        <% if user_signed_in? %>
            <div class='btn-group'>
                <div class="dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <%= image_tag current_user.user_icon.url, class:"rounded-circle", size: "70x70" %>
                </div>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <li><%= link_to 'マイページ', user_path(current_user.id), class:"dropdown-item" %></li>
                    <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:"dropdown-item"%>
                </ul>
            </div>
        <% else %>
            <ul class="nav justify-content-center">
                <li class="nav-item"><%= link_to '新規登録', new_user_registration_path, class: "nav-link" %></li>
                <li class="nav-item"><%= link_to 'ログイン', user_session_path, class: "nav-link" %>
            </ul>
        <% end %>
    </div>

</header>